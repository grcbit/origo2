    <record model="ir.ui.view" id="multi_sale_form">
	<field name="name">multi.sale.form</field>
	<field name="model">sale.order</field>
	<field name="inherit_id" ref="sale.view_order_form" />
	<field name="arch" type="xml">
		<!--
          <field name="partner_id" position="after">
    	     <field name="commitment_date" />
	     <field name="invoice_required_grcbit" />
	     <field name="delivery_id_ml" />
   	     <button name="update_delivery" type="object" string=" Cambiar transportista" help="Actualiza el trasportista por defecto" class="btn-link mb-1 px-0" icon="fa-refresh"  />
          </field>
		-->
          <field name="payment_term_id" position="after">
	    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True, 'no_create': True}"/>
	    <field name="commitment_date"/>
          </field>
	  <field name="partner_id" position="attributes">
		<attribute name="options">{'no_create': True, 'no_create_edit':True, 'no_quick_create': True} </attribute>
	  </field>
	  <xpath expr="//sheet/notebook/page[@name='order_lines']//form//field[@name='product_id']" position="attributes">
		<attribute name="options">{'no_create': True, 'no_create_edit':True} </attribute>
          </xpath>
	  <xpath expr="//sheet/notebook/page[@name='order_lines']//tree/field[@name='product_template_id']" position="attributes">
		<attribute name="options">{'no_create': True, 'no_create_edit':True} </attribute>
          </xpath>
        </field>
  </record>



